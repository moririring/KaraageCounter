@model KaraageCounter.Models.Karaage

@{
    ViewBag.Title = "Create";
}
<div>
    @Html.ActionLink("戻る", "Index")
</div>
<br>
<br>

<div class="text-center">
    <p>あなたが食べた唐揚げの数</p>
    <span style="font-size: 256px;">@ViewBag.Count</span>個
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <input type="submit" value="からあげ↑↑" class="btn btn-success btn-lg" />
    }
</div>
<div class="text-left">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @*            @Html.DropDownList("Count", new SelectList(@ViewBag.Prefecture));*@
                @Html.LabelFor(model => model.UserID, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.UserID, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.UserID, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    }
</div>


    <p>IpAddress : @ViewBag.IpAddress</p>
    <p>Country: @ViewBag.Country</p>
    <p>Region: @ViewBag.Region</p>
    <p>City: @ViewBag.City</p>


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
